<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="@dimen/cwac_cam2_fragment_chrono_margin"
              android:layout_marginBottom="@dimen/cwac_cam2_fragment_chrono_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <ImageView
    android:id="@+id/captured_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/cwac_cam2_fragment_chrono_margin"
    android:layout_marginTop="@dimen/cwac_cam2_fragment_chrono_margin"/>

  <Button
    android:id="@+id/retry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:paddingLeft="@dimen/cwac_cam2_fragment_chrono_margin"
    android:paddingRight="@dimen/cwac_cam2_fragment_chrono_margin"
    android:drawableRight="@drawable/cwac_cam2_ic_refresh_white"
    android:text="Retake"
    android:visibility="gone"
    android:background="@drawable/oval_border"
    android:textColor="@android:color/white"
    android:layout_gravity="center_horizontal"
    android:gravity="center"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sensor_text"
    android:background="#00ffffff"
    android:text="25"
    android:textSize="9sp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/cwac_cam2_fragment_panel_item_width"/>

  <TextView
    android:id="@+id/image_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text=""
    android:fontFamily="sans-serif-medium"
    android:layout_marginTop="@dimen/cwac_cam2_fragment_chrono_margin"
    android:textColor="#000000"
    android:textSize="18sp"
    android:gravity="center"/>

</RelativeLayout>